    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            overflow-x: hidden;
            background-size: 180% 180%;
            animation: gradient-animation 6s ease infinite;
            /* This will hide horizontal scrollbar */
        }

        @keyframes gradient-animation {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        header {
            background-color: #323f97;
            color: #ffffff;
            padding: 0 0 0 25px;
            text-align: left;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header img {
            width: 30rem;
            margin: 20px;
        }

        header h1 {
            margin: 0;
        }

        nav {
            display: flex;
            align-items: center;
            margin-right: 10rem;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            font-size: 1.3rem;
            margin: 0 25px;
        }

        nav a:hover {
            color: chartreuse;
        }

        .toggle-btn {
            display: none;
            /* Initially hide the toggle button */
            cursor: pointer;
            font-size: 28px;
            position: absolute;
            top: 25px;
            right: 15px;
        }

        footer {
            background-color: #323f97;
            color: #fff;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 3rem;
            text-align: center;
        }

        /* Responsive styles */
        @media (max-width: 1100px) {
            header img {
                width: 20rem;
            }

            nav a {
                font-size: 1rem;
                margin: 0 15px;
            }
        }

        @media (max-width: 768px) {
            header img {
                width: 18rem;
            }

            .toggle-btn {
                display: block;
                /* Display the toggle button on small screens */
            }

            nav {
                margin-right: 0rem;
                display: flex;
                flex-direction: column;
                /* Display the navigation links vertically */
                align-items: center;
                margin-top: 7px;
                display: none;
                /* Initially hide the navigation links on small screens */
                position: absolute;
                top: 50px;
                right: 0px;
                background-color: #323f97;
                padding: 60px;
                animation: slideInOpacity 0.5s ease-in-out;
            }

            @keyframes slideInOpacity {
                from {
                    opacity: 0.5;
                    transform: translateX(100%);
                }

                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            nav a {
                color: #fff;
                text-decoration: none;
                margin: 5px 0;
            }

        }

        .img {
            width: 50px;
        }
    </style>
